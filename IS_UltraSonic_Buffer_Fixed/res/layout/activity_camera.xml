<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
     <ScrollView 
       android:id="@+id/scrollView7"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:layout_alignParentRight="true"
       android:layout_alignParentStart="true"
       android:fadeScrollbars="true"
       android:background="@drawable/logo1"
       android:verticalScrollbarPosition="right" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
       >


        <Button
            android:id="@+id/button6"
            style="@style/cusbut1"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:layout_alignLeft="@+id/imageView11"
            android:layout_alignStart="@+id/imageView11"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@+id/imageView11"
            android:background="@drawable/cusbut1"
            android:clickable="true"
            android:text="Home"
            android:alpha="0.7"
            android:textColor="#ff000000"
            android:textSize="10dip"
            android:textStyle="normal" />

        <Button
            android:id="@+id/button7"
            style="@style/cusbut1"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:layout_alignTop="@+id/button6"
            android:layout_toEndOf="@+id/button6"
            android:layout_toRightOf="@+id/button6"
            android:background="@drawable/cusbut"
            android:clickable="true"
            android:text="Products"
            android:textColor="#ff000000"
            android:textSize="10dip"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button6"
            android:layout_centerHorizontal="true"
            android:text="CAMERA  SPECIFICATIONS"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffa4090a"
            android:textIsSelectable="false"
            android:textSize="17dip"
            android:textStyle="bold|italic"
            android:typeface="monospace"
            android:visibility="visible" />

    
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/black"
            android:alpha="0.7"
            android:layout_below="@+id/textView29"
            android:orientation="vertical">

            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text1"
                android:textSize="17dip"
                android:text="Model"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text2"
                android:textSize="14dip"
                android:text="Microsoft Lifecam HD 6000\n"/>
             <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text3"
                android:textSize="17dip"
                android:text="Height and Inclination of placement "/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text4"
                android:textSize="14dip"
                android:text="12cm, 45 deg to the normal\n"/>
             <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text5"
                android:textSize="17dip"
                android:text="Field of View"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text6"
                android:textSize="14dip"
                android:text="66deg diagonal view\n"/>
             <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text7"
                android:textSize="17dip"
                android:text="Area of View"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text8"
                android:textSize="14dip"
                android:text="blind spot for 6cm front of the car,total area of view 675sq cm\n"/>
             <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text9"
                android:textSize="17dip"
                android:text="Resolution"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text10"
                android:textSize="14dip"
                android:text="1280x800 sq pixels\n"/>
            
        </LinearLayout>
        <TextView
            android:id="@+id/textView30"
            android:layout_width="200sp"
            android:layout_height="15sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="copyrights @ RPA"
            android:textColor="#ffa9a9a9"
            android:textSize="6sp" />
    </RelativeLayout>

</ScrollView>

</RelativeLayout>
