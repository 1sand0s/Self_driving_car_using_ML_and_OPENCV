<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ml"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <Button
        android:id="@+id/button1"
        style="@style/cusbut"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/cusbut"
        android:text="Home"
        android:textSize="10dip" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toRightOf="@+id/button1"
        android:background="#00FFFFFF"
        android:text="AID"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button3"
        style="@style/cusbut"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignParentRight="true"
        android:background="@drawable/cusbut"
        android:text="Contact"
        android:textSize="10dip" />
  <ScrollView 
      android:layout_width="match_parent"
      android:layout_height="match_parent"
       android:layout_below="@+id/textView26"
       android:layout_marginTop="20dip"
       android:id="@+id/scroll2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/line23"
       
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/Image1"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_marginTop="100dip"
            
            android:alpha="0.6"/>

            <ScrollView 
                android:layout_width="match_parent"
                android:layout_height="500dip"
                android:id="@+id/scroll"
                android:background="@drawable/black"
                android:alpha="0.7"
               
                >
                
        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:orientation="vertical"
            android:divider="#ffffff"
            android:showDividers="middle" 
            >
            <TextView 
                android:id="@+id/text1"
                android:text="Car"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                />
            <TextView 
                android:id="@+id/text2"
                android:text="Camera"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                />
            <TextView 
                android:id="@+id/text3"
                android:text="Path"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                />
            <TextView 
                android:id="@+id/text4"
                android:text="Power Supply"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                />
            <TextView 
                android:id="@+id/text5"
                android:text="Additional Specifications"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                />
            <TextView 
                android:id="@+id/text6"
                android:text="Regulations"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                />
            </LinearLayout>
            </ScrollView>
        

    </LinearLayout>
</ScrollView>
	    <TextView
	        android:id="@+id/textView32"
	        android:layout_width="115sp"
	        android:layout_height="15sp"
	        android:layout_alignParentBottom="true"
	        android:layout_alignRight="@+id/scroll2"
	        android:text="copyrights @ RPA"
	        android:textColor="#ffa9a9a9"
	        android:textSize="6sp" />
	
</RelativeLayout>